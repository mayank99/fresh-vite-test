{
	"nodeModulesDir": "auto",
	"imports": {
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.2",
		"fresh": "jsr:@fresh/core@^2.0.2",
		"preact": "npm:preact@^10.27.1",
		"@preact/signals": "npm:@preact/signals@^2.3.1",
		"vite": "npm:vite@^7.1.4"
	},
	"tasks": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview"
	},
	"lint": {
		"rules": {
			"tags": [
				"fresh",
				"recommended"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 100
	},
	"exclude": [
		"**/_fresh/*"
	],
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"deno.ns",
			"deno.unstable"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	}
}
